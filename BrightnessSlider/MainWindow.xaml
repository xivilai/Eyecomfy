<Window x:Class="BrightnessSlider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrightnessSlider"
        mc:Ignorable="d"
        Title="MainWindow" Height="60" Width="350"
        WindowStartupLocation="Manual"
        WindowStyle="None" AllowsTransparency="True"
        Background="#FF1B1B1B" Foreground="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image x:Name="brightnessIcon" Source="brightness.ico" Grid.Column="0"
               Width="28px" Height="28" OpacityMask="White"/>
        <Slider x:Name="slider" Grid.Column="1" IsSnapToTickEnabled="True"
                VerticalAlignment="Center" Maximum="100" LargeChange="5" SmallChange="1" Value="40" />
        <Label x:Name="sliderValueLabel" Grid.Column="2" Foreground="White" FontSize="25px"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Content="{Binding Path=Value, ElementName=slider, StringFormat={}{0:#}}">
        </Label>
    </Grid>
</Window>
